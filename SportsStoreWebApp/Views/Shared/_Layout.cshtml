<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Cửa hàng Thể thao</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-appendd-version="true" />
</head>

<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
			<div class="container">
				<a class="navbar-brand" asp-controller="Home" asp-action="Index">SportsStore</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav me-auto">
						<li class="nav-item">
							<a class="nav-link" asp-controller="Home" asp-action="Index">Trang chủ</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-controller="Product" asp-action="List">Sản phẩm</a>
						</li>
					</ul>
					<div class="d-flex">
						@await Component.InvokeAsync("CartSummary")
					</div>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<div class="row">
			<div class="col-md-3">
				@* View Component danh mục sản phẩm *@
				@await Component.InvokeAsync("NavigationMenu")
			</div>
			<div class="col-md-9">
				<main role="main" class="pb-3">
					@RenderBody()
				</main>
			</div>
		</div>
	</div>
	<footer class="border-top footer text-muted mt-5">
		<div class="container text-center">
			&copy; @DateTime.Now.Year - SportsStore - <a asp-controller="Home" asp-action="Privacy">Chính sách</a>
		</div>
	</footer>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundl
e.min.js"></script>
	@RenderSection("Scripts", required: false)
</body>

</html>