@using Microsoft.AspNetCore.Identity
@using SportsStore.Domain.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="d-flex align-items-center">
	@await Component.InvokeAsync("CartSummary")
	@if (User.Identity?.IsAuthenticated == true)
	{
		<span class="text-white ms-3 me-2">Xin chào, @User.Identity.Name</span>
		<form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
			<button type="submit" class="btn btn-outline-light btn-sm">Đăng xuất</button>
		</form>
	}
	else
	{
		<a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-light btn-sm ms-3">Đăng
			nhập</a>
		<a asp-area="Identity" asp-page="/Account/Register" class="btn btn-light btn-sm ms-2">Đăng
			ký</a>
	}
</div>
