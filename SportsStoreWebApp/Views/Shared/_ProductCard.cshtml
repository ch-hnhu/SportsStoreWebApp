@model SportsStore.Domain.Models.Product
<div class="col">
	<div class="card h-100 shadow-sm">
		@if (!string.IsNullOrEmpty(Model.ImageUrl))
		{
			<img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name" style="height: 200px; object-fit: cover;">
		}
		else
		{
			<img src="https://via.placeholder.com/200x200?text=No+Image" class="card-img-top" alt="No Image"
				style="height: 200px; object-fit: cover;">
		}
		<div class="card-body d-flex flex-column">
			<h5 class="card-title">@Model.Name</h5>
			<p class="card-text text-muted">@Model.Category</p>
			<p class="card-text flex-grow-1">@Model.Description</p>
			<div class="d-flex justify-content-between align-items-center mt-auto">
				<h4 class="text-success mb-0">@Model.Price.ToString("C")</h4>
				<form asp-action="AddToCart" asp-controller="Cart" method="post">
					<input type="hidden" name="productId" value="@Model.ProductID" />
					<input type="hidden" name="returnUrl"
						value="@(Context.Request.Path + Context.Request.QueryString)" />
					<button type="submit" class="btn btn-primary btn-sm">
						<i class="fas fa-cart-plus"></i> Thêm vào giỏ
					</button>
				</form>
			</div>
		</div>
	</div>
</div>